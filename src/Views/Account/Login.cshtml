@model LoginViewModel
@{
    ViewData[Constants.Title] = Miniblog.Core.Properties.Resources.Login;
    ViewData[Constants.Description] = Miniblog.Core.Properties.Resources.SignInToTheWebsite;
}

@section head {
    <link rel="stylesheet" href="~/css/login.scss" />
}

<form method="post" id="login" aria-labelledby="legend" asp-route-returnUrl="@ViewData[Constants.ReturnUrl]">
    <div asp-validation-summary="All"></div>
    <fieldset>
        <legend id="legend">Anmelden</legend>

        <input asp-for="UserName" aria-label="Username" autofocus required placeholder="Benutzername" />
        <input asp-for="Password" aria-label="Password" required placeholder="Passwort" />

        <input asp-for="RememberMe" />
        <label asp-for="RememberMe">angemeldet bleiben</label>

        <input type="submit" value="Anmelden" />
    </fieldset>
</form>
